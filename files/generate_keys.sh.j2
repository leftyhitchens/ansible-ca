#!/bin/bash
# Generate the root certifiicate
openssl req -x509 -newkey rsa:2048 -days {{default_days}} -nodes -out {{config_path}}/ca.cert
# generate the csr and the server key
openssl req -newkey rsa:1024 -nodes -out {{cert_config_path}}/server.csr -keyout {{key_config_path}}/server.key
# generate the self signed certificate
openssl ca -batch -config {{ca_config_path}}/myca.conf -notext -in {{cert_config_path}}/server.csr -out {{cert_config_path}}/server.cert